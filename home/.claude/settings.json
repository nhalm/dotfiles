{
  "permissions": {
    "allow": [
      "Bash(go fmt:*)",
      "Bash(go doc:*)",
      "Bash(go vet:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go run:*)",
      "Bash(golangci-lint:*)",
      "Bash(gofmt:*)",
      "Bash(make:*)",
      "Bash(black:*)",
      "Bash(ruff:*)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(pip install:*)",
      "WebSearch",
      "Bash(grep:*)",
      "Bash(find:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
